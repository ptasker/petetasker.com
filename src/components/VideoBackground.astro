---
import VideoOverlay from './VideoOverlay.jsx';

const assets = {
  gb: "/assets/ghostbusters.mp4",
};

interface Props {
  description?: string;
}

const { description } = Astro.props;
---

<div class="relative w-full h-[50vh] min-h-[400px] overflow-hidden bg-black flex items-center justify-center">
  <video
    class="absolute top-1/2 left-1/2 w-full h-full min-w-full min-h-full object-cover -translate-x-1/2 -translate-y-1/2 opacity-60"
    autoplay
    loop
    muted
    playsinline
  >
    <source src={assets.gb} type="video/mp4" />
  </video>

  <div class="absolute inset-0 bg-gradient-to-r from-black via-transparent to-black opacity-80"></div>
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-black opacity-80"></div>

  <div class="relative z-10 text-center text-white p-4 max-w-4xl mx-auto">
    <div class="video-overlay-wrapper">
       <VideoOverlay client:load />
    </div>
    {description && (
      <p class="mt-4 text-xl md:text-2xl text-gray-300 font-mono opacity-80">
        {description}
      </p>
    )}
  </div>
</div>

<style is:global>
  /* Custom styles to override or support VideoOverlay.jsx if needed */
  .video-overlay-wrapper .intro {
    width: auto !important;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
    font-family: 'Share Tech Mono', monospace;
  }

  .video-overlay-wrapper .hey {
    display: block;
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: #4ade80; /* Tailwind green-400 */
  }

  .video-overlay-wrapper .mah-name {
    display: block;
    font-size: 3rem;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 1rem;
    color: #f8fafc; /* Tailwind slate-50 */
  }

  @media (min-width: 768px) {
    .video-overlay-wrapper .mah-name {
      font-size: 5rem;
    }
    .video-overlay-wrapper .hey {
      font-size: 2rem;
    }
  }

  .video-overlay-wrapper b {
    font-family: 'VT323', monospace;
    font-size: 2rem;
    color: #facc15; /* Tailwind yellow-400 */
    text-transform: uppercase;
  }
</style>
